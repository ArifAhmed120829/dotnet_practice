@model Ex.Domain.Entities.Product

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <label>Name:</label>
    <input type="text" asp-for="Name" required /><br>

    <label>Price:</label>
    <input type="number" asp-for="Price" required /><br>

    <label>Description:</label>
    <textarea asp-for="Description"></textarea><br>

    <button type="submit">Update</button>
</form>

<a href="@Url.Action("Index", "Product")">Back to List</a>
