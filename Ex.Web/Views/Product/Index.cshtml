@model IEnumerable<Ex.Domain.Entities.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>
<body>
    <h1>Product List</h1>

    <table border="1" style="border-collapse: collapse; width: 100%;">
        <thead>
            <tr>
                <th style="padding: 10px;">Id</th>
                <th style="padding: 10px;">Name</th>
                <th style="padding: 10px;">Price</th>
                <th style="padding: 10px;">Description</th>
                <th style="padding: 10px;">Created Date</th>
                <th style="padding: 10px;">Updated Date</th>
                <th style="padding: 10px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td style="padding: 10px;">@product.Id</td>
                    <td style="padding: 10px;">@product.Name</td>
                    <td style="padding: 10px;">@product.Price</td>
                    <td style="padding: 10px;">@product.Description</td>
                    <td style="padding: 10px;">@product.CreatedDate</td>
                    <td style="padding: 10px;">@product.UpdatedDate</td>
                    <td style="padding: 10px;">
                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = product.Id })" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Product")">Add New Product</a>
</body>
</html>
